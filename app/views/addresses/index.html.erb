<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      
      <th>Consignee_name</th>
      <th>Consignee_address</th>
      <th>Default?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
       
        <td><%= address.consignee_name %></td>
        <td><%= address.consignee_address %></td>
        <td>
          <% if address.default? %>
          default
          <% end %>

        </td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Make it default', make_it_default_address_path(address), method: :post %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %></br>
